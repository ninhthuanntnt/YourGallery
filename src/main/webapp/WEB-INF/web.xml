<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<!--    Handle error page-->
    <error-page>
        <error-code>401</error-code>
        <location>/WEB-INF/pages/error/401.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/pages/error/500.jsp</location>
    </error-page>

    <context-param>
        <param-name>pathToSavedImages</param-name>
        <param-value>D:\4th year\LTM\CuoiKi\Data</param-value>
    </context-param>
    <context-param>
        <param-name>pathToRawImages</param-name>
        <param-value>D:\4th year\LTM\CuoiKi\Data\images\raw</param-value>
    </context-param>
    <context-param>
        <param-name>pathToThumbnailImages</param-name>
        <param-value>D:\4th year\LTM\CuoiKi\Data\images\thumbnail</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
    </servlet-mapping>
</web-app>